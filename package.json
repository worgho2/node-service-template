{
    "name": "node-service-template",
    "version": "1.0.0",
    "description": "Node Service Template",
    "main": "lib/src/server.js",
    "type": "commonjs",
    "engines": {
        "node": "16.10"
    },
    "scripts": {
        "clean": "rm -rf lib",
        "build": "npm test && npm run clean && tsc",
        "lint:fix": "tslint --project tsconfig.json --fix",
        "prettier:fix": "prettier --config .prettierrc --write .",
        "pretest": "npm run prettier:fix && npm run lint:fix",
        "test": " mocha -r ts-node/register '**/__tests__/**/*.spec.ts'",
        "dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/worgho2/node-service-template.git"
    },
    "author": "Ot√°vio Baziewicz Filho",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/worgho2/node-service-template/issues"
    },
    "homepage": "https://github.com/worgho2/node-service-template#readme",
    "dependencies": {
        "config": "^3.3.6",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-http-context": "^1.2.4",
        "helmet": "^4.6.0",
        "inversify": "^6.0.1",
        "inversify-express-utils": "^6.4.3",
        "morgan": "^1.10.0",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/chai": "^4.2.22",
        "@types/config": "^0.0.40",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.0.0",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.1",
        "chai": "^4.3.4",
        "mocha": "^9.1.3",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "ts-node": "^10.4.0",
        "tslint": "^6.1.3",
        "typescript": "^4.4.4"
    }
}
